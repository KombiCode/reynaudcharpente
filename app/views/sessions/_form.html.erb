<%= form_with(id: "session_form",
              url: sessions_path,
              data: { extended_modal_target: 'form', remote: true },
              autocomplete: "long-story-to-disable-chrome-autocomplete"
             ) do |form| %>
  <div class="px-4 pt-5 pb-4 sm:p-6 sm:pb-4 font-jost">
    <div class="form-group">
      <%= form.label :email, class: "label" %>
      <%= form.email_field :email, id: "login_email", class: "input", onfocus: "this.removeAttribute('readonly');", readonly: "true" %>
    </div>
    <div class="form-group">
      <%= form.label :password, class: "label" %>
      <%= form.password_field :password, id: "login_password", class: "input", onfocus: "this.removeAttribute('readonly');", readonly: "true" %>
    </div>
  </div>
  <div class="flex items-center px-4 mt-6 rounded-b font-jost actions">
      <button type="submit" class="w-full px-4 py-2 mb-4 text-white rounded-sm bg-brandActive">
        Log in
      </button>
  </div>
<% end %>
