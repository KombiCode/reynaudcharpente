<%= form_with(id: "session_form",
              url: sessions_path,
              data: { extended_modal_target: 'form', remote: true }
             ) do |form| %>
  <div class="px-4 pt-5 pb-4 sm:p-6 sm:pb-4 font-jost">
    <div class="form-group">
      <%= form.label :email, class: "label" %>
      <%= form.email_field :email, class: "input", autocomplete: "nope"%>
    </div>
    <div class="form-group">
      <%= form.label :password, class: "label" %>
      <%= form.password_field :password, class: "input", autocomplete: "nope"%>
    </div>
  </div>
  <div class="flex items-center px-4 mt-6 rounded-b font-jost actions">
      <button type="submit" class="w-full px-4 py-2 mb-4 text-white rounded-sm bg-brandBrown">
        Log in
      </button>
  </div>
<% end %>
