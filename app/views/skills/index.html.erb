<% if current_user && current_user.admin %>
  <div class="flex px-8 py-2 mx-auto text-lg font-light font-jost">
    <%= link_to t('action_add'), new_skill_path,
        class: " text-xl text-white inline-flex px-0 md:px-4 items-center bg-brandBrown rounded-md hover:text-brandBrown hover:bg-white" %>
  </div>
<% end %>
<div class="max-w-3xl mx-auto mt-8" data-controller="accordion">
  <div class="flex flex-col items-baseline p-4 space-y-6 rounded shadow-lg font-jost">
    <% @skills.each_with_index do |skill, i| %>
      <div class="flex items-center justify-between w-full pb-2 text-gray-700 border-b border-gray-200">
        <div class="flex">
          <h1 class="mb-2 text-4xl text-brandBrown">
              <%= skill.title %>
          </h1>
          <% if current_user && current_user.admin %>
            <div class="flex items-center justify-end px-2 space-x-4">
              <%= link_to t('action_view'), skill_path(skill), class: "font-medium text-gray-500 hover:text-brandBrown" %>
              <%= link_to t('action_delete'), skill_path(skill), method: :delete, class: "font-medium text-gray-500 hover:text-brandBrown" %>
            </div>
          <% end %>
        </div>
        <div class="cursor-pointer" data-accordion-target="title" data-action="click->accordion#change">
          <svg viewBox="0 0 20 20" width="20" height="20" class="fill-current text-grey-dark accordion-arrow">
            <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"></path>
          </svg>
        </div>
      </div>
      <p class="hidden text-lg accordion-content" data-accordion-target="body">
        <%= skill.description %>
      </p>
    <% end %>
  </div>
</div>
