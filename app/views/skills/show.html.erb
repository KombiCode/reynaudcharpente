<div class="flex items-center justify-center w-screen mt-8">
  <div class="w-5/12 shadow-xl rounded-xl">
    <div class="flex flex-col p-7 font-jost">
      <h2 class="mt-1 text-2xl truncate text-brandActive"><%= @skill.title %></h2>
      <p class="mt-1 text-base text-gray-600"><%= @skill.description %></p>
      <% if current_user && current_user.admin %>
        <%= link_to t('action_edit'), edit_skill_path(@skill), class: "font-medium text-gray-500 hover:text-brandActive" %>
      <% end %>
    </div>
  </div>
</div>
