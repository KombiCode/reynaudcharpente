<div class="shadow-xl rounded-xl">
  <% if employee.photo.attached? %>
    <%= image_tag employee.photo.variant(resize_to_fill: [500, 500]), class: "object-cover w-full rounded-t-xl" %>
  <% else %>
    <img class="object-cover w-full rounded-t-xl" width=500 height=500 src=<%= asset_path("picture-employee-card.jpg")%> alt="">
  <% end %>
  <div class="flex flex-col p-7 font-jost">
    <h2 class="mt-1 text-2xl truncate text-brandActive"><%= employee.name %></h2>
    <div class="flex flex-row">
    <div class="p-1 px-2 text-xs text-yellow-700 uppercase bg-yellow-100 rounded-2xl"><%= employee.job_title %></div>
    </div>
    <p class="mt-1 text-base text-gray-600"><%= employee.about %></p>
    <% if current_user && current_user.admin %>
      <% if admin_action == "show" %>
        <%= link_to t('action_view'), employee_path(employee), class: "brandHover text-gray-500" %>
        <%= link_to t('action_delete'), employee_path(employee), method: :delete, class: "brandHover text-gray-500" %>
      <% elsif admin_action == "edit" %>
        <%= link_to t('action_edit'), edit_employee_path(employee), class: "brandHover text-gray-500" %>
      <% end %>
    <% end %>
  </div>
</div>
