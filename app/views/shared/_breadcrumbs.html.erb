<% if breadcrumbs.count > 0 %>
  <nav class="flex bg-white border-b border-gray-200" aria-label="Breadcrumb">
    <ol class="flex mx-auto space-x-2 font-jost md:mx-0 md:px-12 md:space-x-4">
      <% if breadcrumbs.count > 0 %>
        <li class="flex">
          <div class="flex items-center">
            <a href="/" class="font-medium text-gray-500 brandHover">
              <%= t('home_page') %>
            </a>
          </div>
        </li>
      <% end %>
      <% breadcrumbs.each do |crumb| %>
      <li class="flex">
        <div class="flex items-center">
          <svg class="flex-shrink-0 w-6 h-full text-gray-200" viewBox="0 0 24 44" preserveAspectRatio="none" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                  <path d="M.293 0l22 22-22 22h1.414l22-22-22-22H.293z"></path>
          </svg>
          <% if crumb.link? %>
            <%= link_to crumb.name, crumb.path, class: "brandHover ml-4 font-medium text-gray-500" %>
          <% else %>
            <span class="ml-4 font-medium text-brandActive md:ml-2">
              <%= crumb.name %>
            </span>
          <% end %>
        </div>
      </li>
      <% end %>
    </ol>
  </nav>
<% end %>