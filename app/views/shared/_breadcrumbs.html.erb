<nav class="flex bg-white border-b border-gray-200" aria-label="Breadcrumb">
  <ol class="flex w-full max-w-screen-xl px-4 mx-auto space-x-4 sm:px-6 lg:px-8">
    <% if breadcrumbs.count > 0 %>
      <li class="flex">
        <div class="flex items-center">
          <a href="/" class="text-gray-500 hover:text-brandBrown">
            <svg class="w-5 h-5 mr-2.5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path></svg>
          </a>
        </div>
      </li>
    <% end %>
    <% breadcrumbs.each do |crumb| %>
     <li class="flex">
      <div class="flex items-center">
        <svg class="flex-shrink-0 w-6 h-full text-gray-200" viewBox="0 0 24 44" preserveAspectRatio="none" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path d="M.293 0l22 22-22 22h1.414l22-22-22-22H.293z"></path>
        </svg>
        <% if crumb.link? %>
          <%= link_to crumb.name, crumb.path, class: "ml-4 font-medium font-dosis text-gray-500 hover:text-brandBrown" %>
        <% else %>
          <span class="ml-4 font-medium font-dosis text-brandBrown md:ml-2">
            <%= crumb.name %>
          </span>
        <% end %>
      </div>
     </li>
    <% end %>
  </ol>
</nav>
