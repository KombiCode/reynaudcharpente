<header class="flex flex-wrap items-center px-6 py-2 bg-gray-50 lg:px-8 lg:py-0">
  <div class="flex items-center justify-between flex-1">
    <!-- logo -->
    <a href="/" class="flex items-center my-2 mr-8">
      <%= image_tag "rc-logo01.svg", alt: "Reynaud Charpente, spÃ©cialiste maison ossature bois", width: "80", height: "80", class: "content-center" %>
      <span class="text-xl font-akaya text-brandBrown">Reynaud Charpente</span>
    </a>
    <% if Rails.env == 'staging'%>
      <p class="mt-2 text-sm font-thin leading-snug">(<%= Rails.env %>)</p>
    <% end %>
  </div>

  <label for="menu-toggle" class="block pointer-cursor lg:hidden">
    <svg class="text-gray-900 fill-current" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20">
      <title>menu</title>
      <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
    </svg>
  </label>
  <input class="hidden" type="checkbox" id="menu-toggle" />

  <div class="hidden w-full lg:flex lg:items-center lg:w-auto" id="menu">
    <nav>
      <ul class="items-center justify-between pt-4 text-base text-gray-700 lg:flex lg:pt-0">
        <li>
          <a class="block px-0 py-3 mr-8 text-xl font-medium text-gray-500 transition ease-in-out border-b-2 border-transparent lg:p-4 duration-250 font-dosis hover:border-brandBrown" href="#">
            <%= t('wood_frame') %>
          </a>
        </li>
        <li>
          <a class="block px-0 py-3 mr-8 text-xl font-medium text-gray-500 transition ease-in-out border-b-2 border-transparent lg:p-4 duration-250 font-dosis hover:border-brandBrown" href="#">
            <%= t('carpentry') %>
          </a>
        </li>
        <li>
          <a class="block px-0 py-3 mr-8 text-xl font-medium text-gray-500 transition ease-in-out border-b-2 border-transparent lg:p-4 duration-250 font-dosis hover:border-brandBrown" href="#">
            <%= t('blog') %>
          </a>
        </li>
        <li>
          <div class="inline-block px-4 py-2 mt-4 text-sm leading-none no-underline rounded text-gray hover:text-gray-900 hover:bg-brandYellow lg:mt-0">
            <div class="relative" data-controller="dropdown">
              <div data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" data-dropdown-target="button" tabindex="0" class="inline-block select-none">
                <span class="flex items-center inline-block text-xl font-medium text-gray-500 appearance-none font-dosis">
                  <%= t('company') %>
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="w-4 h-4"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"></path></svg>
                </span>
              </div>
              <div data-dropdown-target="menu" class="absolute right-0 hidden mt-2">
                <div class="overflow-hidden bg-white border rounded shadow">
                    <%= link_to t('team'),  employees_path,
                        data: {action: "click->dropdown#toggle"},
                        class: 'block px-8 py-2 mb-1 text-xl font-medium text-gray-500
                                transition ease-in-out border-b-2 border-transparent 
                                lg:p-4 duration-250 font-dosis hover:border-brandBrown' %>
                    <%= link_to t('skills'), skills_path,
                        data: {action: "click->dropdown#toggle"},
                        class: 'block px-8 py-2 mb-1 text-xl font-medium text-gray-500
                                transition ease-in-out border-b-2 border-transparent 
                                lg:p-4 duration-250 font-dosis hover:border-brandBrown' %>
                </div>
              </div>
            </div>
          </div>
        </li>
      </ul>
    </nav>
    <div data-controller="extended-modal" class="pr-4 lg:pl-8">
      <span class="inline-flex rounded-md shadow-md">
        <span class="inline-flex rounded-md shadow-xs">    
          <%= link_to "Contact", new_contact_path,
              data: { action: "click->extended-modal#open", remote: true },
              class: "font-dosis text-xl text-brandBrown inline-flex items-center px-4 py-2 font-medium leading-6 transition duration-150 ease-in-out bg-white border border-transparent rounded-md hover:bg-brandGreen focus:outline-none focus:shadow-outline-brandYellow" %>
          <%= render 'contacts/modal' %>
        </span>
      </span>
    </div>
    <a href="https://www.facebook.com/JFReynaudCharpente/?ref=aymt_homepage_panel" class="flex items-center justify-start py-3 mb-4 lg:py-0 lg:ml-4 lg:mb-0 pointer-cursor">
      <i class="text-gray-400 cursor-pointer hover:text-socialFacebook fab fa-facebook fa-lg"></i>
    </a>
  </div>
</header>
